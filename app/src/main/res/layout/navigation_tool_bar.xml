<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/traslant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/traslant"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left_base_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_navigation_base_left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="8dp"
                android:src="@mipmap/mune" />

            <TextView
                android:id="@+id/tv_navigation_base_left"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/navigation_base_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_navigation_base_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:maxWidth="180dp"
                android:textColor="#333333"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/right_base_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minWidth="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_navigation_base_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:scaleType="matrix"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_navigation_base_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="14dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line_gray_view" />
</LinearLayout>